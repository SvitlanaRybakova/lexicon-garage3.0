@model IEnumerable<IndexMemberViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>All Members</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalParkingCost)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleCount)
            </td>
            <td>
                    @item.TotalParkingCost.ToString("0") <span>SEK</span>
            </td>
          
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
