@model IEnumerable<lexicon_garage3.Web.Models.ViewModels.VehicleTypeViewModels.IndexVechicleTypeViewModel>

@{
    ViewData["Title"] = "VehicleTypeIndex";
}

<h1>Vehicle Types List</h1>
<p>
    <a asp-action="Create" class="btn btn-primary mt-4">Create New Type</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VehicleTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleSize)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumOfWheels)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleTypeName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.VehicleSize)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumOfWheels)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-info" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
