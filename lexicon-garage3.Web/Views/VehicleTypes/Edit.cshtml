@model lexicon_garage3.Web.Models.ViewModels.VehicleTypeViewModels.EditVehicleTypeViewModel
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Vehicle Type</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="VehicleTypeName" class="control-label"></label>
                <input asp-for="VehicleTypeName" class="form-control" />
                <span asp-validation-for="VehicleTypeName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedVehicleSize" class="control-label">Vehicle Size</label>
                <select asp-for="SelectedVehicleSize" asp-items="Model.VehicleTypeSizes" class="form-control">
                    <option value="">Select Size</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="NumOfWheels" class="control-label"></label>
                <input asp-for="NumOfWheels" class="form-control" />
                <span asp-validation-for="NumOfWheels" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<br />  
<div>
    <a asp-action="VehicleTypeIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
