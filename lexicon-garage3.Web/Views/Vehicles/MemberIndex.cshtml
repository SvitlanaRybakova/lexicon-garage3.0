@model IEnumerable<lexicon_garage3.Web.Models.ViewModels.VehicleViewModels.MemberIndexVehicleParkingViewModel>
@{
    ViewData["Title"] = "MemberIndex";
}

<h1>My Registered Vehicles</h1>

<p>
    <a asp-action="Create">Register New</a>
</p>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.RegNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Brand)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Color)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VehicleType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Brand)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType)
                </td>
                <td>
                    <a asp-action="Edit" class="btn btn-success" asp-route-id="@item.RegNumber">Check In</a> |
                    <a asp-action="Details" class="btn btn-info" asp-route-id="@item.RegNumber">Details</a> |
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Delete" class="btn btn-outline-danger" asp-route-id="@item.RegNumber">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
