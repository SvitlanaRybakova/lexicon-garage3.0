@model IndexParkingSpotViewModel

<form asp-action="Search" method="get">
    <div class="input-group my-5">
        <input type="text" class="form-control" placeholder="Search on parking space number" asp-for="ParkingNumber" />
        <div class="input-group-append">
            <select class="form-control" asp-for="Size" asp-items="Model.Sizes">
                <option selected="selected" value="">Parking place size</option>
            </select>
        </div>
        <div class="input-group-append">
            <button type="submit" class="btn btn-secondary">Search</button>
        </div>
    </div>
</form>

