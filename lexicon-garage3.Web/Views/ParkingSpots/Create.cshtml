@model CreateParkingSpotsViewModel

@{
    ViewData["Title"] = "Create";
}



<h1>Create Parking Place</h1>


<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <select asp-for="Size" class="form-control" asp-items="@(ViewData["Size"] as SelectList)">
                </select>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ParkingNumber" class="control-label"></label>
                <input asp-for="ParkingNumber" class="form-control" />
                <span asp-validation-for="ParkingNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HourRate" class="control-label"></label>
                <input asp-for="HourRate" class="form-control" />
                <span asp-validation-for="HourRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="IndexParkingPlace">Back to List</a>
</div>

@await Html.PartialAsync("_AlertMessages")
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
